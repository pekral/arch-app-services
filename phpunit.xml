<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         beStrictAboutTestsThatDoNotTestAnything="false"
         enforceTimeLimit="true"
         defaultTimeLimit="3">
    <testsuites>
        <testsuite name="Core">
            <file>./tests/Unit/ArchServiceProviderTest.php</file>
            <directory suffix="Test.php">./tests/Unit/DataBuilder</directory>
        </testsuite>
        <testsuite name="Exceptions">
            <directory suffix="Test.php">./tests/Unit/Exceptions</directory>
        </testsuite>
        <testsuite name="ModelManager">
            <directory suffix="Test.php">./tests/Unit/ModelManager</directory>
        </testsuite>
        <testsuite name="Repository">
            <directory suffix="Test.php">./tests/Unit/Repository</directory>
        </testsuite>
        <testsuite name="Service">
            <directory suffix="Test.php">./tests/Unit/Service</directory>
            <directory suffix="Test.php">./tests/Unit/Services</directory>
        </testsuite>
        <testsuite name="Actions">
            <directory suffix="Test.php">./tests/Unit/Actions</directory>
        </testsuite>
        <testsuite name="Models">
            <directory suffix="Test.php">./tests/Unit/Models</directory>
        </testsuite>
        <testsuite name="Progress">
            <directory suffix="Test.php">./tests/Unit/Progress</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="DB_CONNECTION" value="sqlite"/>
        <env name="DB_DATABASE" value=":memory:"/>
        <env name="DB_FOREIGN_KEY_CHECKS" value="true"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="QUEUE_DRIVER" value="sync"/>
        <env name="MAIL_MAILER" value="array"/>
    </php>
</phpunit>
