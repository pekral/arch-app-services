#!/usr/bin/env php
<?php

declare(strict_types = 1);

use Pekral\Arch\Command\CheckActionCoverageCommand;
use Symfony\Component\Console\Application;

if (file_exists(__DIR__ . '/../vendor/autoload.php')) {
    require __DIR__ . '/../vendor/autoload.php';
} elseif (file_exists(__DIR__ . '/../../../autoload.php')) {
    require __DIR__ . '/../../../autoload.php';
} else {
    die('Autoload not found. Run composer install first.');
}

$application = new Application('Arch Coverage Checker', '1.0.0');
$application->add(new CheckActionCoverageCommand());
$application->setDefaultCommand('arch:check-action-coverage', true);
$application->run();
