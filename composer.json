{
  "name": "pekral/arch-app-services",
  "description": "Laravel package providing architectural abstractions for services, repositories and model managers",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "laravel",
    "package",
    "architecture",
    "repository",
    "service",
    "model-manager"
  ],
  "readme": "README.md",
  "authors": [
    {
      "name": "Petr KrÃ¡l",
      "email": "kral.petr.88@gmail.com",
      "homepage": "https://github.com/pekral",
      "role": "Maintainer"
    }
  ],
  "homepage": "https://github.com/pekral/arch-app-services",
  "support": {
    "issues": "https://github.com/pekral/arch-app-services/issues",
    "source": "https://github.com/pekral/arch-app-services",
    "docs": "https://github.com/pekral/arch-app-services#readme"
  },
  "require": {
    "php": "^8.4",
    "ext-simplexml": "*",
    "baopham/dynamodb": "^6.6",
    "illuminate/contracts": "^12.0",
    "illuminate/database": "^12.0",
    "illuminate/pagination": "^12.0",
    "illuminate/support": "^12.0",
    "spatie/laravel-data": "^4.19.1"
  },
  "require-dev": {
    "aws/aws-sdk-php": "^3.369.34",
    "ergebnis/composer-normalize": "^2.50.0",
    "iksaku/laravel-mass-update": "^1.0.8",
    "larastan/larastan": "^3.9.2",
    "laravel/pint": "^1.27.1",
    "orchestra/testbench": "^10.9",
    "pekral/cursor-rules": "^0.4.1",
    "pekral/phpcs-rules": "^0.4.7",
    "pekral/rector-rules": "^0.4.8",
    "pestphp/pest": "^4.3.2",
    "pestphp/pest-plugin-type-coverage": "^4.0.3",
    "phpstan/extension-installer": "^1.4.3",
    "phpstan/phpstan": "^2.1.39",
    "phpstan/phpstan-deprecation-rules": "^2.0.4",
    "phpstan/phpstan-mockery": "^2.0",
    "phpstan/phpstan-phpunit": "^2.0.16",
    "rector/rector": "^2.3.6",
    "roave/security-advisories": "dev-latest@dev",
    "squizlabs/php_codesniffer": ">=4.0.1",
    "symfony/console": "^7.4.4"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Pekral\\Arch\\": "src/",
      "Pekral\\Arch\\PHPStan\\": "phpstan/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pekral\\Arch\\Examples\\": "examples/",
      "Pekral\\Arch\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "pekral/cursor-rules": true,
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": false
    },
    "bump-after-update": true,
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Pekral\\Arch\\ArchServiceProvider"
      ]
    }
  },
  "scripts": {
    "analyse": [
      "echo \"ğŸ” Running PHPStan static analysis...\"",
      "vendor/bin/phpstan analyse --memory-limit=2G"
    ],
    "build": "composer fix && composer check",
    "check": [
      "echo \"ğŸš€ Running full quality check...\"",
      "@normalize-check",
      "@phpcs-check",
      "@pint-check",
      "@rector-check",
      "@analyse",
      "@security-audit",
      "@test:coverage"
    ],
    "coverage": [
      "echo \"ğŸ“Š Running code coverage analysis...\"",
      "@test:coverage"
    ],
    "dynamodb:start": [
      "echo \"ğŸ—„ï¸ Ensuring DynamoDB is running...\"",
      "bash scripts/check-dynamodb.sh"
    ],
    "fix": [
      "echo \"ğŸ”§ Running all fixes...\"",
      "@normalize-fix",
      "@rector-fix",
      "@pint-fix",
      "@phpcs-fix",
      "echo \"âœ… All fixes completed!\""
    ],
    "normalize-check": [
      "echo \"ğŸ“ Checking Composer normalize...\"",
      "composer normalize --dry-run"
    ],
    "normalize-fix": [
      "echo \"ğŸ“ Running Composer normalize fix...\"",
      "composer normalize || true"
    ],
    "phpcs-check": [
      "echo \"âœ… Running PHP CodeSniffer check...\"",
      "vendor/bin/phpcs --standard=ruleset.xml src/ tests/ examples/ phpstan/"
    ],
    "phpcs-fix": [
      "echo \"ğŸ”§ Running PHP CodeSniffer fix...\"",
      "vendor/bin/phpcbf --standard=ruleset.xml src/ tests/ examples/ phpstan/ || true"
    ],
    "pint-check": [
      "echo \"ğŸ¨ Running Laravel Pint check...\"",
      "vendor/bin/pint src/ tests/ examples/ phpstan/ --test"
    ],
    "pint-fix": [
      "echo \"ğŸ¨ Running Laravel Pint fixes...\"",
      "vendor/bin/pint src/ tests/ examples/ phpstan/"
    ],
    "rector-check": [
      "echo \"ğŸ”„ Running Rector check (dry-run)...\"",
      "vendor/bin/rector process --dry-run"
    ],
    "rector-fix": [
      "echo \"ğŸ”„ Running Rector fixes...\"",
      "vendor/bin/rector process"
    ],
    "security-audit": [
      "echo \"ğŸ”’ Running Composer security audit...\"",
      "composer audit --format=summary"
    ],
    "test:coverage": [
      "echo \"ğŸ“Š Running coverage tests with 100% minimum...\"",
      "@dynamodb:start",
      "php -dpcov.enabled=1 -dpcov.directory=. -dxdebug.mode=off vendor/bin/pest --coverage --min=100 --coverage-filter=src --coverage-clover=build/coverage/clover.xml --coverage-html=build/coverage/html"
    ]
  }
}
