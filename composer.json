{
  "name": "pekral/arch-app-services",
  "description": "Laravel package providing architectural abstractions for services, repositories and model managers",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "laravel",
    "package",
    "architecture",
    "repository",
    "service",
    "model-manager"
  ],
  "authors": [
    {
      "name": "Petr KrÃ¡l",
      "email": "kral.petr.88@gmail.com",
      "homepage": "https://github.com/pekral",
      "role": "Maintainer"
    }
  ],
  "require": {
    "php": "^8.4",
    "ext-simplexml": "*",
    "baopham/dynamodb": "^6.6",
    "illuminate/contracts": "^12.0",
    "illuminate/database": "^12.0",
    "illuminate/pagination": "^12.0",
    "illuminate/support": "^12.0"
  },
  "require-dev": {
    "aws/aws-sdk-php": "^3.369.10",
    "ergebnis/composer-normalize": "^2.48.2",
    "iksaku/laravel-mass-update": "^1.0.8",
    "larastan/larastan": "^3.8.1",
    "laravel/pint": "^1.27.0",
    "orchestra/testbench": "^10.8",
    "pekral/cursor-rules": "dev-master",
    "pekral/phpcs-rules": "dev-master",
    "pekral/rector-rules": "dev-master",
    "pestphp/pest": "^4.3.1",
    "pestphp/pest-plugin-type-coverage": "^4.0.3",
    "phpstan/extension-installer": "^1.4.3",
    "phpstan/phpstan": "^2.1.33",
    "phpstan/phpstan-deprecation-rules": "^2.0.3",
    "phpstan/phpstan-mockery": "^2.0",
    "phpstan/phpstan-phpunit": "^2.0.11",
    "rector/rector": "^2.3.0",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": ">=4.0.1",
    "symfony/console": "^7.4.3"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Pekral\\Arch\\": "src/",
      "Pekral\\Arch\\PHPStan\\": "phpstan/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pekral\\Arch\\Examples\\": "examples/",
      "Pekral\\Arch\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": false
    },
    "bump-after-update": true,
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Pekral\\Arch\\ArchServiceProvider"
      ]
    }
  },
  "scripts": {
    "analyse": [
      "echo \"ğŸ” Running PHPStan static analysis...\"",
      "vendor/bin/phpstan analyse --memory-limit=2G"
    ],
    "check": [
      "echo \"ğŸš€ Running full quality check...\"",
      "@normalize-check",
      "@phpcs-check",
      "@pint-check",
      "@rector-check",
      "@analyse",
      "@security-audit",
      "@test:coverage"
    ],
    "coverage": [
      "echo \"ğŸ“Š Running code coverage analysis...\"",
      "@test:coverage"
    ],
    "fix": [
      "echo \"ğŸ”§ Running all fixes...\"",
      "@normalize-fix",
      "@rector-fix",
      "@pint-fix",
      "@phpcs-fix",
      "echo \"âœ… All fixes completed!\""
    ],
    "normalize-check": [
      "echo \"ğŸ“ Checking Composer normalize...\"",
      "composer normalize --dry-run"
    ],
    "normalize-fix": [
      "echo \"ğŸ“ Running Composer normalize fix...\"",
      "composer normalize || true"
    ],
    "phpcs-check": [
      "echo \"âœ… Running PHP CodeSniffer check...\"",
      "vendor/bin/phpcs --standard=ruleset.xml src/ tests/ examples/ phpstan/"
    ],
    "phpcs-fix": [
      "echo \"ğŸ”§ Running PHP CodeSniffer fix...\"",
      "vendor/bin/phpcbf --standard=ruleset.xml src/ tests/ examples/ phpstan/ || true"
    ],
    "pint-check": [
      "echo \"ğŸ¨ Running Laravel Pint check...\"",
      "vendor/bin/pint src/ tests/ examples/ phpstan/ --test"
    ],
    "pint-fix": [
      "echo \"ğŸ¨ Running Laravel Pint fixes...\"",
      "vendor/bin/pint src/ tests/ examples/ phpstan/"
    ],
    "rector-check": [
      "echo \"ğŸ”„ Running Rector check (dry-run)...\"",
      "vendor/bin/rector process --dry-run"
    ],
    "rector-fix": [
      "echo \"ğŸ”„ Running Rector fixes...\"",
      "vendor/bin/rector process"
    ],
    "security-audit": [
      "echo \"ğŸ”’ Running Composer security audit...\"",
      "composer audit --format=summary"
    ],
    "test:coverage": [
      "echo \"ğŸ“Š Running coverage tests with 100% minimum...\"",
      "php -dpcov.enabled=1 -dpcov.directory=. -dxdebug.mode=off vendor/bin/pest --coverage --coverage-filter=src --coverage-filter=examples --min=100"
    ]
  }
}
